<div class="flex flex-col stretch">
  <div class="w-full p-5">
    <p class="font-bold text-lg">Notification</p>
  </div>
  <% if @pager.get_items.any? %>
    <% @pager.get_items.map do |notif| %>
      <%= render partial: "notification/notif", locals: {notif: notif} %>
    <% end %>
  <%= render partial:'pagination/pages', locals: { pager: @pager} %>
  <% end %>
</div>

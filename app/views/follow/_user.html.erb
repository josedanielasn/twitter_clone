<div class="flex items-center w-full justify-between py-2 hover:bg-gray-100 transition duration-700 ease-in-out cursor-pointer">
  <%= link_to user_path(user) do %>
    <div class="flex">
        <i class="fas fa-user-circle fa-2x mr-2"></i>
        <div class="flex flex-col"> 
            <p class="font-bold"><%= user.first_name + " " + user.last_name %></p>
            <p class="text-twitterGray"><%= "@" + user.username %></p>
        </div>
    </div>
  <% end %>
  <div>
    <% if current_user.followings.exists?(user.id) %>
      <%= link_to "unfollow", unfollow_user_path(user), method: :delete,
      class: "rounded-full bg-twitter text-white px-4 py-1 border-none font-bold cursor-pointer transition duration-700 ease-in-out hover:bg-red-700" %>
    <% elsif current_user.id == user.id %>
      <%= nil %>
    <% else %>
      <%= link_to "follow", follow_user_path(user), method: :post,
      class: "rounded-full text-twitter px-4 py-1 border border-twitter font-bold cursor-pointer transition duration-700 ease-in-out hover:bg-twitterLight" %>
    <% end %>
  </div>
</div>

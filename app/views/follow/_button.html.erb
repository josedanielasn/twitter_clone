<% if current_user.followings.exists?(user.id) %>
  <%= link_to "Unfollow", unfollow_user_path(user), method: :delete, class: "rounded-full bg-twitter text-white px-4 py-2 border-none font-bold cursor-pointer transition duration-900 ease-in-out hover:bg-red-700" %>
<% elsif current_user.id == user.id %>
  <%= link_to "Edit Profile", edit_user_registration_path, class: "rounded-full text-twitter px-4 py-2 border border-twitter font-bold cursor-pointer transition duration-900 ease-in-out hover:bg-twitterLight" %>
<% else %>
  <%= link_to "Follow", follow_user_path(user), method: :post, class: "rounded-full text-twitter px-4 py-2 border border-twitter font-bold cursor-pointer transition duration-900 ease-in-out hover:bg-twitterLight" %>
<% end %>

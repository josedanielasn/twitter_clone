<div class="flex flex-col w-full items-center justify-center p-10">
  <div class="py-4">
    <i class="fab fa-twitter fa-2x fill-current text-twitter"></i>
  </div>
  <p class="font-bold text-2xl">Login to Twitter</p>
  <div class="w-3/5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="border-b-2 border-twitter pt-5 pb-2">
        <div class="bg-twitterVeryLight w-full">
          <%= f.label :email, class: "text-twitterGray text-sm" %>
        </div>
        <div class="bg-twitterLight w-full">
          <%= f.email_field :email, autocomplete: "email", class: "bg-twitterLight focus:outline-none" %>
        </div>
      </div>

      <div class="border-b-2 border-twitter pt-5 pb-2">
        <div class="bg-twitterVeryLight w-full">
          <%= f.label :password, class: "text-twitterGray text-sm" %>
        </div>
        <div class="bg-twitterLight w-full">
          <%= f.password_field :password, autocomplete: "current-password", class: "bg-twitterLight focus:outline-none" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "rounded-full bg-twitter text-white px-4 w-full my-5 py-4 border-none font-bold
        cursor-pointer transition duration-900 ease-in-out hover:bg-twitterDark" %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>

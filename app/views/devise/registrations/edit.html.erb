<div class="flex flex-col stretch">
  <div class="w-full p-5">
    <p class="font-bold text-lg">Edit Profile <%= resource_name.to_s.humanize %></p>
  </div>
  <div class="flex flex-col justify-between h-full px-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.file_field :profile_picture %>
      </div>

      <div class="border-b-2 border-twitter pt-5 pb-2">
        <div class="bg-twitterVeryLight w-full">
          <%= f.label :username, class: "text-twitterGray text-sm" %>
        </div>
        <div class="bg-twitterLight w-full">
          <%= f.text_field :username, autocomplete: "username", class: "bg-twitterLight focus:outline-none" %>
        </div>
      </div>

      <div class="border-b-2 border-twitter pt-5 pb-2">
        <div class="bg-twitterVeryLight w-full">
          <%= f.label :first_name, class: "text-twitterGray text-sm" %>
        </div>
        <div class="bg-twitterLight w-full">
          <%= f.text_field :first_name, autocomplete: "first_name", class: "bg-twitterLight focus:outline-none" %>
        </div>
      </div>

      <div class="border-b-2 border-twitter pt-5 pb-2">
        <div class="bg-twitterVeryLight w-full">
          <%= f.label :last_name, class: "text-twitterGray text-sm" %>
        </div>
        <div class="bg-twitterLight w-full">
          <%= f.text_field :last_name, autocomplete: "last_name", class: "bg-twitterLight focus:outline-none" %>
        </div>
      </div>     

      <div class="border-b-2 border-twitter pt-5 pb-2">
        <div class="bg-twitterVeryLight w-full">
          <%= f.label :email, class: "text-twitterGray text-sm" %>
        </div>
        <div class="bg-twitterLight w-full">
          <%= f.email_field :email, autocomplete: "email", class: "bg-twitterLight focus:outline-none" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="border-b-2 border-twitter pt-5 pb-2">
        <div class="bg-twitterVeryLight w-full text-twitterGray text-sm">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <%= @minimum_password_length %> characters minimum
          <% end %>
        </div>
        <div class="bg-twitterLight w-full">
          <%= f.password_field :password, autocomplete: "new-password", class: "bg-twitterLight focus:outline-none" %>
        </div>
      </div> 

      <div class="border-b-2 border-twitter pt-5 pb-2">
        <div class="bg-twitterVeryLight w-full">
          <%= f.label :password_confirmation, class: "text-twitterGray text-sm" %>
        </div>
        <div class="bg-twitterLight w-full">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-twitterLight focus:outline-none" %>
        </div>
      </div>

      <div class="border-b-2 border-twitter pt-5 pb-2">
        <div class="bg-twitterVeryLight w-full text-twitterGray text-sm">
          <%= f.label :current_password %>
          <i>leave blank if you don't want to change it</i>
        </div>
        <div class="bg-twitterLight w-full">
          <%= f.password_field :current_password, autocomplete: "current-password", class: "bg-twitterLight focus:outline-none" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "rounded-full bg-twitter text-white px-4 w-full my-5 py-4 border-none font-bold
        cursor-pointer transition duration-900 ease-in-out hover:bg-twitterDark" %>
      </div>
    <% end %>    

    <div class="flex justify-end w-full p-5">
      <%= link_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "font-bold text-twitterGray cursor-pointer hover:underline" %>
    </div>
  </div>
 </div>





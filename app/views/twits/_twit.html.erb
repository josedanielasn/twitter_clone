<tr>
  <td><%= link_to twit.user.username, user_path(twit.user) %></td>  
  <td><%= render_body(twit) %></td>
  <td>
    <%= link_to "Show", user_twit_path(twit.user.id, twit) %>
    <%= render_action(twit) %>
  </td>
  <% if defined? retwit %>
    <td>retweeted by <%= link_to retwit.retwiter.username, user_path(retwit.retwiter) %></td>
  <% end %>
</tr>
